<Defs>
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>KO_Kunai</defName>
    <!-- unique -->
    <label>Kunai</label>
    <description>A set of well balanced kunai, perfect for throwing and stabbing.</description>
    <graphicData>
      <texPath>Weapons/KO_Kunai</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Silver_Drop</soundInteract>
    <techLevel>Neolithic</techLevel>
    <costStuffCount>25</costStuffCount>
    <statBases>
      <WorkToMake>3500</WorkToMake>
      <Mass>1</Mass>
      <AccuracyTouch>1</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.65</AccuracyMedium>
      <AccuracyLong>0.5</AccuracyLong>
      <RangedWeapon_Cooldown>.75</RangedWeapon_Cooldown>
    </statBases>
    <equippedStatOffsets>
      <ButcheryFleshEfficiency>1.2</ButcheryFleshEfficiency>
      <ButcheryFleshSpeed>1.2</ButcheryFleshSpeed>
    </equippedStatOffsets>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <weaponTags>
      <li>KO_RangedBasic</li>
    </weaponTags>
    <recipeMaker>
      <recipeUsers>
        <li>FueledSmithy</li>
        <li>ElectricSmithy</li>
      </recipeUsers>
      <researchPrerequisite>Smithing</researchPrerequisite>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>KO_FlyingKunai</defaultProjectile>
        <warmupTime>.7</warmupTime>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <burstShotCount>2</burstShotCount>
        <range>20</range>
        <soundCast>ThrowGrenade</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>7</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>KO_FlyingKunai</defName>
    <label>small kunai</label>
    <graphicData>
      <texPath>Projectile/KO_FlyingKunai</texPath>
